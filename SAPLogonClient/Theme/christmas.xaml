<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mui="http://firstfloorsoftware.com/ModernUI">

    <!-- derive from Light or Dark theme-->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/FirstFloor.ModernUI;component/Assets/ModernUI.Dark.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- specify the accent color (optional) -->
    <Color x:Key="AccentColor">#1ba1e2</Color>

    <!-- custom theme resources-->
    <Rectangle x:Key="WindowBackgroundContent" x:Shared="false">
        <Rectangle.Fill>
            <!--<ImageBrush Opacity="0.5" ImageSource="http://www.bing.com/az/hprichbg/rb/ViewAcrossLasVegas_ZH-CN13501737392_1366x768.jpg" Stretch="Fill"></ImageBrush>-->
            <ImageBrush Opacity="0.5" ImageSource="/Resources/Merry2.jpg" Stretch="Fill"></ImageBrush>
            <!--<LinearGradientBrush EndPoint="0,1" Opacity=".2">
                <GradientStop Offset="0" Color="Transparent" />
                <GradientStop Offset="1" Color="{DynamicResource AccentColor}" />
            </LinearGradientBrush>-->
        </Rectangle.Fill>
    </Rectangle>
</ResourceDictionary>